<script>
    document.addEventListener('DOMContentLoaded', function() {
        const landType = "<%= land.landType %>";
        const soilType = "<%= land.soilType %>";
        const cropSuggestions = document.getElementById('cropSuggestions');
        const fertilizerSuggestions = document.getElementById('fertilizerSuggestions');

        async function getSuggestions(landType, soilType) {
            try {
                cropSuggestions.innerHTML = '<div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div>';
                fertilizerSuggestions.innerHTML = '<div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div>';

                const response = await fetch('/api/get-suggestions', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ landType, soilType }),
                });
                
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                
                const data = await response.json();
                return data;
            } catch (error) {
                console.error('Error:', error);
                return {
                    crops: "Unable to fetch recommendations at this time. Please try again later.",
                    fertilizers: "Unable to fetch recommendations at this time. Please try again later."
                };
            }
        }

        // Update the suggestion content
        getSuggestions(landType, soilType).then(suggestions => {
            // Convert line breaks to HTML breaks for better formatting
            cropSuggestions.innerHTML = suggestions.crops.replace(/\n/g, '<br>');
            fertilizerSuggestions.innerHTML = suggestions.fertilizers.replace(/\n/g, '<br>');
        }).catch(error => {
            cropSuggestions.textContent = "Error loading suggestions";
            fertilizerSuggestions.textContent = "Error loading suggestions";
            console.error('Error:', error);
        });
    });
</script>
